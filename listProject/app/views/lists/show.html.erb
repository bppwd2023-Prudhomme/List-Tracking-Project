<p style="color: green"><%= notice %></p>

<h1><%= @list.title %></h1>
<h2>Items:</h2>
<% @list.items.each do |item| %>
  <%= render item %>
<% end %>

<div>
  <%= link_to "Share this list", new_permission_path(id: @list.id) %> |
  <%= link_to "Edit this list", edit_list_path(@list) %>

  <%= button_to "Destroy this list", @list, method: :delete %>
</div>
