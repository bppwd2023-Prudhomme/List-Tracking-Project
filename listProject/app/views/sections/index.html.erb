<p style="color: green"><%= notice %></p>

<% @lists.each do |list| %>
  <%= render list %>
  <p>
    <%= link_to "Show this list", list %>
  </p>
<% end %>

<h1>Sections</h1>


<div id="sections">
  <% @sections.each do |section| %>
    <%= render section %>
    <p>
      <%= link_to "Show this section", section %>
    </p>
  <% end %>
</div>

<%= link_to "New section", new_section_path %>
